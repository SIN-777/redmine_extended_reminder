<%= l(:extended_reminder_version_overdue_issues_mail_body, :count => @issues.size) %>

<%- @versions.each do |version| -%>

  <%= version.name %> (<%= version.effective_date %>)
  <%= "-" * 70 %>
    <%- @version_grouped_issues[version.id].each do |issue| -%>
      * <%= issue.project %> - <%= issue.tracker %> #<%= issue.id %>: (<%= issue.status %>) <%= issue.subject %>
    <%- end -%>

<%- end -%>

<%= @issues_url %>
